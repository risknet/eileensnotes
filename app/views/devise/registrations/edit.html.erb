<% title "User Profile" %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <h2><small>Edit Your Profile</small></h2>
  <fieldset>
    <label><%= f.label :email, "Email (Login ID)" %></label>
    <%= f.email_field :email, :autofocus => true, :readonly => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><label>Currently waiting confirmation for: <%= resource.unconfirmed_email %></label></div>
    <% end %>

    <label><%= f.label :name %></label>
    <%= f.text_field :name %>

    <label><%= f.label :password %></label>
    <%= f.password_field :password, :autocomplete => "off", title: "Leave blank if you do not want to change", data: {tooltip: true }  %>

    <label><%= f.label :password_confirmation %></label>
    <%= f.password_field :password_confirmation %>

    <label><%= f.label :current_password, "Current password to confirm your change" %></label>
    <%= f.password_field :current_password, title: "Your current password to confirm your change", data: {tooltip: true }  %>

    <%= f.submit "Update", :class => "button small radius" %>
  </fieldset>
<% end %>
<label><%= link_to "<< back", root_path %></label>
