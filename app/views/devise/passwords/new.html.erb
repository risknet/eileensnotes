<% title "User Profile" %>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	<%= devise_error_messages! %>
	<h2><small>Forgot your password?</small></h2>
	<fieldset>
		<label><%= f.label :email %></label>
		<%= f.email_field :email, :autofocus => true, title: "Please provide your signin email address", data: {tooltip: true } %>

		<%= f.submit "Send me reset password instructions", :class => "button small radius" %>
	</fieldset>
<% end %>
<%= render "devise/shared/links" %>