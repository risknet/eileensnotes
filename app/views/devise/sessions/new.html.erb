<% title "Sign In" %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<h2><small>Sign In</small></h2>
	<fieldset>
 			<label><%= f.label :email %></label>
 			<%= f.email_field :email, :autofocus => true, title: "Your email address to sign in", data: {tooltip: true } %>

 			<label><%= f.label :password %></label>
 			<%= f.password_field :password, title: "Your password to sign in", data: {tooltip: true } %>

 			<% if devise_mapping.rememberable? -%>
   			<div>
   				<%= f.check_box :remember_me %> 
   				<%= f.label :remember_me %>
   			</div>
 			<% end -%>
 			<%= f.submit "Sign in", :class => "button small radius" %>
 		</fieldset>
<% end %>
<%= render "devise/shared/links" %>